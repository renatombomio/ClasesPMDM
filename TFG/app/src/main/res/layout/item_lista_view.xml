<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_nombreItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:hint="nombre"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_estadoItem"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/blue"
                android:hint="estado"
                android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_numeroItem"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:hint="numero"
                    android:textColor="@color/amber"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/txt_sexoItem"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="15dp"
                    android:hint="sexo"/>


                <TextView
                    android:id="@+id/txt_edadItem"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="50dp"
                    android:hint="edad"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/txt_pesoItem"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="18dp"
                    android:hint="peso"/>


                <TextView
                    android:id="@+id/txt_razaItem"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="50dp"
                    android:hint="raza"/>

            </LinearLayout>
            <TextView
                android:id="@+id/txt_ubicacionItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:hint="ubicaciÃ³n"
                />

            <TextView
                android:id="@+id/txt_emailItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:hint="email"
                />

        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>